<Page
    x:Class="CyreneGUI.Views.Console.ConsolePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gu="using:CyreneGUI.Utils">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Padding="30">
            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    CornerRadius="8"
                    BorderThickness="1">
                <ListView x:Name="LogListView"
                        ItemsSource="{x:Bind ViewModel.Logs, Mode=OneWay}"
                        Loaded="{x:Bind LogListView_Loaded}"
                        SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <TextBlock Text="{x:Bind}" FontSize="14"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
        </Grid>

        <Grid Grid.Row="1"
              Padding="30,16,30,16"
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
              BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="12">
                <Button Content="{gu:Tr K=ClearLog}"
                        Click="{x:Bind Clear_Click}"
                        Height="40"
                        Width="130"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
