<Page
    x:Class="CyreneGUI.Views.Home.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cu="using:CyreneCore.Utils"
    xmlns:gu="using:CyreneGUI.Utils">

    <Grid Padding="30,30,130,30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{x:Bind ViewModel.WelcomeText, Mode=OneWay}"
                   FontSize="32"
                   FontWeight="SemiBold"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="0,50,0,0"
                   TextWrapping="Wrap"
                   Foreground="{StaticResource PinkToBlueDarkBrush}">
        </TextBlock>

        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="20">
            <Grid HorizontalAlignment="Center"
                  RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Source="{x:Bind gu:AppUtil.GetImage('Cyrene.png')}"
                       Width="200"/>

                <Grid x:Name="MorseTriggerGrid"
                      Background="Transparent"
                      Width="200"
                      Height="200"
                      PointerPressed="{x:Bind Morse_PointerPressed}"
                      PointerReleased="{x:Bind Morse_PointerReleased}"
                      PointerExited="{x:Bind Morse_PointerExited}"/>

                <TextBlock Grid.Row="1"
                           Text="{x:Bind cu:CoreConst.Name}"
                           FontSize="28"
                           Foreground="White"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <TextBlock Grid.Row="2"
                           Text="{x:Bind cu:CoreConst.Author}"
                           FontSize="20"
                           Foreground="White"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>

                <TeachingTip IsOpen="{x:Bind ViewModel.IsMorseTipOpen, Mode=TwoWay}"
                             Background="{StaticResource PinkToBlueBrush}"
                             PreferredPlacement="Center"
                             PlacementMargin="350,-150,0,0">
                    <TeachingTip.Content>
                        <Grid Height="20">
                            <TextBlock Text="{x:Bind ViewModel.MorseInput, Mode=OneWay}"
                                    FontWeight="Bold"
                                    FontSize="15"/>
                        </Grid>
                    </TeachingTip.Content>
                </TeachingTip>
            </Grid>
        </StackPanel>
    </Grid>
</Page>